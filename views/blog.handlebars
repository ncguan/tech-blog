<h2>{{title}}</h2>
<p>Created by {{user.username}} on {{format_date date_created}}</p>
<p>{{content}}</p>

<p>Comments</p>
{{#each comments as |comment|}}
<div>
    <div>
        <p>{{comment.content}}</p>
        <p>Commented by {{comment.user.username}} on {{format_date comment.date_created}}</p>
    </div>
</div>
{{/each}}
<form class="comment-form">
    <div>
        <label>Comment:</label>
        <input type="text" id="comment-content" />
    </div>
    <div>
        <button type="submit">submit</button>
    </div>
</form>

{{#if logged_in}}
<script src="/js/comment.js"></script>
{{/if}}