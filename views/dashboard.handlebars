<h2 class="d-flex justify-content-center">Your Dashboard</h2>

{{#each blogs as |blog|}}

<div class="card m-5 pl-3 pt-3">
    <h2>
        <a href="/dashboard/{{blog.id}}">{{blog.title}}</a>
    </h2>
    <p>{{format_date blog.date_created}}</p>
</div>

{{/each}}

<div class="d-flex justify-content-center">
    <button class="btn btn-outline-primary" id="post-btn">Create New Post</button>
</div>


{{#if logged_in}}
<script src="/js/redirectBlog.js"></script>
{{/if}}