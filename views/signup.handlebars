<h2 class="d-flex justify-content-center">Sign Up</h2>

<form class="signup-form m-5">
    <div class="form-group">
        <label>Username:</label>
        <input type="text" class="form-control" id="username-signup" />
    </div>
    <div class="form-group">
        <label>Password:</label>
        <input type="password" class="form-control" id="password-signup" />
    </div>
    <div class="text-center">
        <button class="btn btn-outline-primary" type="submit">Sign Up</button>
    </div>
    <a class="d-flex justify-content-center mt-5" href="/login">Login Here</a>
</form>

<script src="./js/signup.js"></script>